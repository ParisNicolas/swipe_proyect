<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
let table = `
<table>
    <thead>
        <tr>
            <th style="width: 10%;">Rank</th>
            <th style="width: 20%;">Name</th>
            <th style="width: 10%;">Time</th>
            <th style="width: 10%;">Results</th>
        </tr>
    </thead>
    <tbody>
        <% ranking.map(player => {%>
        <tr>
            <td><%= player.rank%></td>
            <td><%= player.name%></td>
            <td><%= player.time%></td>
            <td><%= player.results%></td>
        </tr>
        <% })%>
    </tbody>
</table>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #4CAF50;
        color: white;
        font-size: 1.2em;
    }

    td {
        font-size: 1em;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>
`

function leaderboard(){
    Swal.fire({
        title: 'Leaderboard',
        html: table,
        showCloseButton: true,
        confirmButtonText:
            'Great!',
        confirmButtonAriaLabel: 'Thumbs up, great!',
    })
}
</script>